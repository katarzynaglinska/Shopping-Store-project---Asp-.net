@model WebApplication2.Models.Category

@{
    ViewBag.Title = "Browse";
}
<div class="browse">
    <h2 class="thing__browse-name">@Model.Name</h2>

    @foreach (var item in Model.Things)
    {
        <div class="thing thing--browse">
            <div class="thing__part">
                <a href="@Url.Action("ThingInfo", "Shop", new { id = item.ThingId })">
                    <img class="thing-image" alt="@item.Title" src="@item.ItemArtUrl" />
                    <br />
                    <p class="thing__name">@item.Title</p>
                </a>
                @String.Format("{0:F}", item.Price)zł

            </div>
        </div>

    }
</div>
